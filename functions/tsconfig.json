{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "typeRoots": ["./node_modules/@types"],
    "types": []
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["../node_modules", "node_modules", "**/*.spec.ts"]
}
